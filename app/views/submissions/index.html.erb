<%= page_header "Envios" %>

<% unless @submissions.empty? %>

	<table class="table">
		<thead>
			<tr>
				<th>id</th><th>Fecha</th><th>Veredicto</th><th>Lenguaje</th>
			</tr>
		</thead>
		<tbody>		
			<% @submissions.each do |submission| %>	

				<tr>				
					<td><%= submission.id  %></td>	
					<td><%= timeago_tag submission.created_at, :nojs => true %></td>
					<td><%= submission.verdict %></td>
					<td>
					<%=
						case submission.py_version 
							when 2
								"Python 2.7"
							when 3
								"Python 3.0"
						end 
					%>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<pre>No has realizado ningun envio... AUN.</pre>

<% end %>

<%= will_paginate @submissions, :renderer => 'BootstrapPaginationHelper::LinkRenderer' %>
