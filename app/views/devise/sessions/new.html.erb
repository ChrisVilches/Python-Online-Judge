<legend><h1>Iniciar sesion</h1></legend>

<div class="row">
	<div class="col-md-6">
		<div class="main-login main-center">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

				<div class="form-group">
						<div class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
							 <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo electronico" %>
						</div>
				</div>

				<div class="form-group">
						<div class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
							 <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "ContraseÃ±a"  %>
						</div>
				</div>

				<% if devise_mapping.rememberable? -%>
				<fieldset class="form-group">
					<label class="form-check-label">
						<%= f.check_box :remember_me, class: "form-check-input" %>
						<%= f.label :remember_me, "Recuerdame" %>
					</label>
				</fieldset>
				<% end -%>

				<div class="form-group ">
					 <%= f.submit "Iniciar", class: "btn btn-primary btn-lg btn-block login-button" %>
				</div>

				<div>
					<%= render "devise/shared/links" %>				
				</div>
			<% end %>
		</div>
	</div>
</div>
