<%= page_header "Crear nueva cuenta" %>


<div class="row">
	<div class="col-md-6">
		<div class="main-login main-center">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>

				<div class="form-group">
					<label for="email">Correo electronico</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
						 <%= f.email_field :email, id: :email, autofocus: true, class: "form-control", placeholder: "Correo electronico" %>
					</div>
				</div>

				<div class="form-group">
					<label for="password">Contrase単a</label>
					<% if @minimum_password_length %>
						<em>(<%= @minimum_password_length %> caracteres minimo)</em>
					<% end %>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
						 <%= f.password_field :password, autocomplete: "off", id: :password, class: "form-control", placeholder: "Contrase単a"  %>
					</div>
				</div>


				<div class="form-group">
					<label for="confirm_pass">Confirmar contrase単a</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
						 <%= f.password_field :password_confirmation, autocomplete: "off", id: :confirm_pass, class: "form-control", placeholder: "Confirmar contrase単a"  %>
					</div>
				</div>


				<div class="form-group ">
					<%= f.submit "Registrar", class: "btn btn-primary btn-lg btn-block login-button" %>
				</div>

				<div>
					<%= render "devise/shared/links" %>				
				</div>
			<% end %>
		</div>
	</div>
</div>



