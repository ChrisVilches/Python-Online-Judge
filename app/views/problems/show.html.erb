<div class="row">
<%= render partial: "problem_description" %>
</div>

<div class="row">
	<%= render partial: "new_submission" %>
	<div class="col-md-6">

		<% if @accepted %>
		<div class="alert alert-success ">
			<span class="glyphicon glyphicon-ok pull-left"></span> 
			<p class="text-center">Ya resolviste este problema</p>
		</div>
		<% end %>

		<div id="latest_submissions"></div>

	</div>
</div> 

<%= javascript_tag do %>
	init(<%= params[:id] %>);

	<% if params[:submission_id] %>
	reload_pending_submission("<%= submissions_url %>", <%= params[:submission_id] %>);
	<% end %>
<% end %>

<script id="submissions_table" type="text/x-handlebars-template">​
	<table class="table">
		<thead>
			<tr>
				<th>id</th><th>Fecha</th><th>Veredicto</th><th>Lenguaje</th>
			</tr>
		</thead>
		<tbody>
			{{#each submissions}}
				<tr>				
					<td>{{ id }}</td>	
					<td>{{ created_at }}</td>
					<td>{{ verdict }}</td>
					<td>
					{{# equal py_version 2 }}
						Python 2.7
					{{else}}
						Python 3.0
					{{/equal}}
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>	
​</script>
